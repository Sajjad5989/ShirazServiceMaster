    <style name="MyToolbar" parent="">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name = "android:fontFamily">@font/iran_sans_medium</item >
    </style>

    <style name="MyToolbar.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name = "android:fontFamily">@font/iran_sans_medium</item >
    </style>

    <style name="MyToolbar.Subtitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name = "android:fontFamily">@font/iran_sans_medium</item >
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/dimen_sp_medium</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name = "android:fontFamily">@font/iran_sans_medium</item >

    </style>

    <style name="MaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name = "smallRatingBar" parent = "Widget.AppCompat.RatingBar.Small">
        <item name = "colorControlNormal">#c4c4c4</item >
        <item name = "colorControlActivated">#EA2340</item >
    </style >

    <style name = "largeRatingBar" parent = "Widget.AppCompat.RatingBar.Indicator">
        <item name = "colorControlNormal">#c4c4c4</item >
        <item name = "colorControlActivated">#EA2340</item >
    </style >
    <style name = "Widget.BottomNavigationView"
           parent = "Widget.Design.BottomNavigationView">
        <item name = "fontFamily">@font/iran_sans_medium</item >
    </style >

</resources>
