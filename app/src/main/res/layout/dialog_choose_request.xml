<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/const_border_light"

    app:cardCornerRadius="@dimen/dimen_card_corner">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_dp_medium"
        android:fontFamily="@font/iran_sans_bold"
        android:text="انتخاب درخواست"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dimen_sp_large"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_large"
        android:layout_marginEnd="@dimen/dimen_dp_medium"
        android:layout_marginBottom="@dimen/dimen_dp_small"
        android:fontFamily="@font/iran_sans"
        android:text="با انتخاب این درخواست مبلغ"
        android:textColor="@color/colorBlackStep_3"
        android:textSize="@dimen/dimen_sp_medium"
        app:layout_constraintRight_toRightOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_dp_small"
        android:layout_marginEnd="@dimen/dimen_dp_small"
        android:fontFamily="@font/iran_sans_bold"
        android:text="5,000"
        android:textColor="@color/color_red"
        app:layout_constraintRight_toLeftOf="@+id/tv_message"
        app:layout_constraintTop_toTopOf="@+id/tv_message" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_currency_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_dp_small"
        android:layout_marginEnd="@dimen/dimen_dp_small"
        android:fontFamily="@font/iran_sans"
        android:text="ریال"
        android:textColor="@color/colorBlackStep_3"
        app:layout_constraintRight_toLeftOf="@+id/tv_money"
        app:layout_constraintTop_toTopOf="@+id/tv_message" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_message_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_small"
        android:fontFamily="@font/iran_sans"
        android:text="از حساب شما کسر می شود."
        android:textColor="@color/colorBlackStep_3"
        app:layout_constraintRight_toRightOf="@+id/tv_message"
        app:layout_constraintTop_toBottomOf="@+id/tv_message" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_small"
        android:layout_marginBottom="@dimen/dimen_dp_small"
        android:fontFamily="@font/iran_sans"
        android:text="آیا برای انتخاب این درخواست اطمینان دارید؟"
        android:textColor="@color/colorBlackStep_3"
        app:layout_constraintRight_toRightOf="@+id/tv_message"
        app:layout_constraintTop_toBottomOf="@+id/tv_message_complete" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_medium"
        android:background="@color/colorWhite"
        android:gravity="left|center_vertical"
        android:padding="@dimen/dimen_dp_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm"
        tools:ignore="RtlHardcoded">



        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_red_style"
            android:layout_marginEnd="@dimen/dimen_dp_small"
            android:fontFamily="@font/iran_sans"
            android:paddingLeft="@dimen/dimen_dp_medium"
            android:paddingTop="@dimen/dimen_dp_tiny"
            android:paddingRight="@dimen/dimen_dp_medium"
            android:paddingBottom="@dimen/dimen_dp_tiny"
            android:text="@string/text_choose_request"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimen_sp_small" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_dp_small"
            android:background="@drawable/text_red_border_style"
            android:fontFamily="@font/iran_sans"
            android:paddingLeft="@dimen/dimen_dp_medium"
            android:paddingTop="@dimen/dimen_dp_tiny"
            android:paddingRight="@dimen/dimen_dp_medium"
            android:paddingBottom="@dimen/dimen_dp_tiny"
            android:text="@string/text_cancel"
            android:textColor="@color/color_red"
            android:textSize="@dimen/dimen_sp_small" />



    </LinearLayout>


</android.support.constraint.ConstraintLayout>
