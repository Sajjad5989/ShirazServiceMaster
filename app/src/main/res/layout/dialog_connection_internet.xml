<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background = "@drawable/dialog_bg"
    android:layoutDirection="rtl"
    android:padding="@dimen/dimen_dp_medium"
    app:cardCornerRadius="@dimen/dimen_card_corner">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_net_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iran_sans_bold"
        android:text="@string/error_net_title"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dimen_sp_medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_delete_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_medium"
        android:fontFamily="@font/iran_sans_light"
        android:text="@string/internet_connection_error"
        android:textColor="@color/colorBlackStep_5"
        android:textSize="@dimen/dimen_sp_tiny"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_net_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_dp_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_delete_confirm">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_internet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/iran_sans_light"
            android:gravity="center"
            android:text="@string/internet"
            android:textColor="@color/color_red"
            android:textSize="@dimen/dimen_sp_very_tiny" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/iran_sans_light"
            android:gravity="center"
            android:text="@string/exit"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_sp_very_tiny" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_retry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/iran_sans_light"
            android:gravity="center"
            android:text="@string/internet_try_again"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/dimen_sp_very_tiny" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
