<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_dp_tiny"
    android:layout_marginEnd="@dimen/dimen_dp_tiny"
    android:background="@drawable/const_border_line"
    android:layoutDirection="rtl"
    android:padding="@dimen/dimen_dp_small">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_my_service"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_gift"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_my_service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_tiny"
        android:layout_marginEnd="@dimen/dimen_dp_tiny"
        android:fontFamily="@font/iran_sans"
        android:text="لوله کشی"
        android:textColor="@color/colorBlackStep_4"
        android:textSize="@dimen/dimen_sp_tiny"

        app:layout_constraintRight_toLeftOf="@+id/image_my_service"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_my_service_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_dp_tiny"

        android:fontFamily="@font/iran_sans"
        android:text="18 ساعت پیش"
        android:textColor="@color/colorBlackStep_1"
        android:textSize="@dimen/dimen_sp_very_tiny"
        app:layout_constraintRight_toLeftOf="@+id/image_my_service"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_service_title" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_service_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_dp_medium"
        android:fontFamily="@font/iran_sans"
        android:paddingLeft="@dimen/dimen_dp_medium"
        android:paddingTop="@dimen/dimen_dp_tiny"
        android:paddingRight="@dimen/dimen_dp_medium"
        android:paddingBottom="@dimen/dimen_dp_tiny"
        android:text="انجام شد"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dimen_sp_tiny"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_very_tiny"
        android:layoutDirection="ltr"
        android:numStars="5"
        android:rating="2.5"
        android:stepSize="0.1"

        android:theme="@style/smallRatingBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_service_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_service_status" />


</android.support.constraint.ConstraintLayout>
