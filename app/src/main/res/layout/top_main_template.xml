<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                             xmlns:app = "http://schemas.android.com/apk/res-auto"

                                             android:layout_width = "match_parent"
                                             android:layout_height = "wrap_content"
                                             android:padding = "@dimen/dimen_dp_small">


    <android.support.constraint.ConstraintLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintTop_toTopOf = "parent">

        <android.support.v7.widget.AppCompatImageView
            android:id = "@+id/image_expert"
            android:layout_width = "@dimen/service_man_avatar_size"
            android:layout_height = "@dimen/service_man_avatar_size"
            android:contentDescription = "@string/app_name"
            android:src = "@drawable/splash_a"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintTop_toTopOf = "parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id = "@+id/tv_expert_name"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:background = "@drawable/btn_slider_order"
            android:fontFamily = "@font/iran_sans_bold"
            android:gravity = "center"
            android:text = "@string/app_name"
            android:textColor = "@color/colorWhite"
            android:textSize = "@dimen/dimen_sp_small"
            app:layout_constraintBottom_toBottomOf = "@id/image_expert"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintRight_toRightOf = "parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id = "@+id/tv_expert_Credit"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "@dimen/dimen_dp_tiny"
            android:layout_marginEnd = "@dimen/dimen_dp_tiny"
            android:fontFamily = "@font/iran_sans_bold"
            android:gravity = "center"
            android:text = "2,500,521"
            android:textColor = "@color/colorAccent"
            android:textSize = "@dimen/dimen_sp_medium"

            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintTop_toBottomOf = "@id/tv_expert_name" />


    </android.support.constraint.ConstraintLayout>

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id = "@+id/circularProgressBar"
        android:layout_width = "150dp"
        android:layout_height = "150dp"
        app:cpb_background_progressbar_color = "@color/colorGrayBorderLight"
        app:cpb_background_progressbar_width = "1dp"
        app:cpb_progress = "25"
        app:cpb_progress_direction = "to_left"
        app:cpb_progress_max = "100"
        app:cpb_progressbar_color = "@color/colorAccent"
        app:cpb_progressbar_color_direction = "bottom_to_top"
        app:cpb_progressbar_color_end = "@color/colorGreen"
        app:cpb_progressbar_color_start = "@color/colorAccent"
        app:cpb_progressbar_width = "4dp"
        app:cpb_round_border = "true"
        app:cpb_start_angle = "180"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />


    <android.support.constraint.ConstraintLayout
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <android.support.v7.widget.AppCompatTextView
            android:id = "@+id/tv_expert_discount"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:background = "@drawable/circle_bg_text_view"
            android:fontFamily = "@font/iran_sans"
            android:gravity = "center"
            android:text = "8"
            android:textColor = "@color/colorWhite"
            android:textSize = "@dimen/dimen_sp_small"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf = "parent"

            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin = "4dp"
            android:fontFamily = "@font/iran_sans_light"
            android:text = "تخفیف"
            android:textColor = "@color/colorControlNormal"
            android:textSize = "@dimen/dimen_sp_tiny"

            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintLeft_toRightOf="@id/tv_expert_discount"
            app:layout_constraintTop_toTopOf = "parent" />


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ratingBar"
        app:layout_constraintRight_toRightOf="@id/ratingBar"
        app:layout_constraintTop_toBottomOf="@id/ratingBar"
        >

        <android.support.v7.widget.AppCompatTextView
            android:id = "@+id/tv_ratingBar"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:background = "@drawable/circle_bg_text_view_rating"

            android:fontFamily = "@font/iran_sans"
            android:gravity = "center"
            android:text = "8"
            android:textColor = "@color/colorWhite"
            android:textSize = "@dimen/dimen_sp_tiny"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf = "parent" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin = "4dp"
            android:fontFamily = "@font/iran_sans_light"
            android:text = "امتیاز"
            android:textColor = "@color/colorControlNormal"
            android:textSize = "@dimen/dimen_sp_tiny"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ratingBar"

            />


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintTop_toTopOf = "parent">

        <android.support.v7.widget.AppCompatTextView
            android:id = "@+id/tv_exp_rate"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:background = "@drawable/circle_bg_text_view_rating"

            android:fontFamily = "@font/iran_sans"
            android:gravity = "center"
            android:text = "42"
            android:textColor = "@color/colorWhite"
            android:textSize = "@dimen/dimen_sp_tiny"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf = "parent" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin = "4dp"
            android:fontFamily = "@font/iran_sans_light"
            android:text = "رتبه"
            android:textColor = "@color/colorControlNormal"
            android:textSize = "@dimen/dimen_sp_tiny"

            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintLeft_toRightOf="@id/tv_exp_rate"
            app:layout_constraintTop_toTopOf = "parent" />


    </android.support.constraint.ConstraintLayout>


    <RatingBar
        android:id = "@+id/ratingBar"
        style = "@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layoutDirection = "ltr"
        android:numStars = "5"
        android:rating = "2.5"
        android:stepSize = "0.1"
        android:theme = "@style/smallRatingBar"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

</android.support.constraint.ConstraintLayout>
