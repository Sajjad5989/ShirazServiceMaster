<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                                   xmlns:app = "http://schemas.android.com/apk/res-auto"
                                                   android:layout_width = "match_parent"
                                                   android:layout_height = "wrap_content"
                                                   android:layout_margin = "@dimen/dimen_dp_tiny"
                                                   android:background = "@drawable/box_current_service"
                                                   android:layoutDirection = "rtl">


    <androidx.appcompat.widget.AppCompatImageView
        android:id = "@+id/image_request"
        android:layout_width = "48dp"
        android:layout_height = "48dp"
        android:src = "@drawable/ic_gift"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id = "@+id/tv_request_title"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "@dimen/dimen_dp_small"
        android:fontFamily = "@font/iran_sans_bold"
        android:textColor = "#424242"
        android:textSize = "@dimen/dimen_sp_small"
        app:layout_constraintRight_toLeftOf = "@id/image_request"
        app:layout_constraintTop_toTopOf = "parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id = "@+id/tv_request_area"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:fontFamily = "@font/iran_sans_light"
        android:gravity = "end"
        android:text = "شهرداری"
        android:textColor = "#9E9E9E"
        android:textSize = "@dimen/dimen_sp_tiny"
        app:layout_constraintBottom_toBottomOf = "@id/image_request"
        app:layout_constraintRight_toRightOf = "@id/tv_request_title" />


</androidx.constraintlayout.widget.ConstraintLayout>
